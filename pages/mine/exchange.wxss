/* pages/mine/exchange.wxss */

.container {
  justify-content: start;
  font-size: 24rpx;
}

.row {
  width: 714rpx;
  height: 180rpx;
  padding: 20rpx 18rpx 0 18rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: start;
}

.row > .left {
  width: calc(100% - 180rpx);
  height: 180rpx;
  background-color: #ed6035;
  border-radius: 10rpx 0 0 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
}

.row > .left > .goods-pic {
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx;
  border-radius: 5rpx;
}

.row > .left > .goods-info {
  width: calc(100% - 140rpx);
  height: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: start;
}

.row > .left > .goods-info > .title {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.row > .left > .goods-info > .worth {
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.row > .left > .goods-info > .expirate {
  font-size: 20rpx;
  margin-top: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.row > .right {
  width: 180rpx;
  height: 180rpx;
  background-color: #fff;
  border-radius: 0 10rpx 10rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.row > .right > .info {
  height: 110rpx;
  line-height: 110rpx;
  font-size: 30rpx;
  text-align: center;
}

.row > .right > .consume {
  height: 30rpx;
  font-size: 20rpx;
  text-align: center;
}
