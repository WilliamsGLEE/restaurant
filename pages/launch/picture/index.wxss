/* pages/launch/picture/index.wxss */

.grids-frame {
  height: 458rpx;
  margin: 35rpx calc(100vw - 718rpx) 35rpx calc(100vw - 717rpx);
}

view.pic_show {
  margin: 3rpx;
  width: 224rpx;
  height: 224rpx;
  text-align: center;
}

image.pic_show {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: #333;
}

image.pic_show:active {
  width: 216rpx;
  height: 216rpx;
  border: 4rpx solid #1cbeb6;
}

image.pic_show::selection {
  width: 216rpx;
  height: 216rpx;
  border: 4rpx solid #1cbeb6;
}

image.pic_show_cur {
  width: 216rpx;
  height: 216rpx;
  border: 4rpx solid #1cbeb6;
}

.upload_mask {
  width: 230rpx;
  height: 230rpx;
  line-height: 224rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  background-color: #000;
  color: #fff;
  font-size: 50rpx;
  border-radius: 10rpx;
}

.upload_success_frame {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  padding: unset;
  border: unset;
  margin: unset;
  top: 180rpx;
  left: 180rpx;
}

.upload_success_frame image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #1cbeb6;
  padding: unset;
  border: unset;
  margin: unset;
}

/* ================================== 上传图片前 ================================== */

.launch_pic_page_b {
  margin: 0;
  padding: 0;
  border: 0rpx;
  height: 100%;
}

.launch_pic_page_b > .page_top {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.launch_pic_page_b > .page_top > view > .tip_top_lable {
  position: relative;
  float: left;
  margin-left: 30rpx;
}

.launch_pic_page_b .page_main {
  width: 100%;
  height: calc(100% - 200rpx);
}

.launch_pic_page_b .page_main > .pic_text {
  padding: 10rpx 30rpx;
}

.launch_pic_page_b .page_main > .pic_text > label {
  margin: 25rpx 0rpx;
  display: block;
}

.launch_pic_page_b .page_main > .pic_text > textarea {
  width: 690rpx;
  height: 100rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #0e1c29;
  text-align: left;
}

.launch_pic_page_b .page_main > .grant_auth {
  min-height: 10rpx;
  margin: 10rpx 0rpx 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.launch_pic_page_b .page_main > .grant_auth .title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.launch_pic_page_b .page_main > .grant_auth .title label {
  margin-left: 30rpx;
}

.launch_pic_page_b .page_main > .grant_auth > .radio-group {
  padding: 0 5%;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.launch_pic_page_b .page_main > .grant_auth > .radio-group radio {
  font-size: 28rpx;
}

.launch_pic_page_b .page_main > .grant_auth > .radio-group radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
  background: unset;
}

.launch_pic_page_b .page_main > .grant_auth > .radio-group radio .wx-radio-input.wx-radio-input-checked {
  background: #1cbeb6;
  border-color: #1cbeb6;
}

.launch_pic_page_b .page_main > .grant_auth > .radio-group radio .wx-radio-input.wx-radio-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.launch_pic_page_b .page_main > .speak_with_interest {
  padding: 10rpx 30rpx;
}

.launch_pic_page_b .page_main > .speak_with_interest > textarea {
  width: 690rpx;
  height: 200rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #0e1c29;
  text-align: left;
}

.launch_pic_page_b .page_bottom {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.launch_pic_page_b .page_bottom > button {
  height: 100rpx;
  line-height: 100rpx;
  margin: 0px;
  border-radius: 0rpx;
}

/* ================================== 上传图片后 ================================== */

.launch_pic_page_a {
  margin: 0;
  padding: 0;
  border: 0rpx;
  height: 100%;
}

.launch_pic_page_a > .page_top {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.launch_pic_page_a > .page_top > view > .tip_top_lable {
  position: relative;
  float: left;
  margin-left: 30rpx;
}

.launch_pic_page_a .page_main {
  width: 100%;
  text-align: center;
}

.launch_pic_page_a .page_main > view.cover {
  padding-bottom: 10rpx;
  width: 100%;
}

.launch_pic_page_a .page_main > view.cover > video {
  width: 100%;
  height: 484rpx;
  background-color: #1cbeb6;
}

.launch_pic_page_a > .page_bottom {
  width: 100%;
  height: 150rpx;
  margin: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.launch_pic_page_a > .page_bottom > .button_group {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.launch_pic_page_a > .page_bottom > .button_group > button {
  width: 350rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  padding: unset;
  border: unset;
  font-size: 34rpx;
}

.launch_pic_page_a > .page_bottom > .button_group > .button_space_left {
  margin-left: 20rpx;
}

.launch_pic_page_a > .page_bottom > .button_group > .button_space_right {
  margin-right: 20rpx;
  background-color: #0e1c29;
}

.row-center {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.launch_pic_page_a .launch_history {
  width: 100%;
  height: calc(100% - 750rpx);
}

/* =============== 打断投屏弹窗开始 =============== */

.bottom-pop-window-container {
  width: 100%;
  height: 100%;
  text-align: left;
  border-radius: 10rpx;
}

.bottom-pop-window-container > .bottom-pop-window-top {
  padding: 50rpx 0rpx 20rpx 0rpx;
}

.bottom-pop-window-container > .bottom-pop-window-top > .title > label {
  font-weight: bold;
  padding-left: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-main {
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-main > .content {
  display: block;
  margin-bottom: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-bottom {
  height: 120rpx;
}

.bottom-pop-window-container > .bottom-pop-window-bottom > button {
  width: 285rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  display: inline-block;
  margin: 0rpx 40rpx;
}

/* =============== 打断投屏弹窗结束 =============== */
