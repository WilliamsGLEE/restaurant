/* pages/launch/video/index.wxss */

/** ================================== 上传视频前 ================================== **/

.launch_video_page_b {
  margin: 0rpx;
  padding: 0rpx;
  border: 0rpx;
  height: 100%;
}

.launch_video_page_b .page_top {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.launch_video_page_b .page_top > label {
  margin-left: 30rpx;
}

.launch_video_page_b .page_top > button {
  width: 150rpx;
  height: 60rpx;
}

.launch_video_page_b .page_main {
  width: 100%;
  height: calc(100% - 168rpx);
  text-align: center;
}

.launch_video_page_b .page_main > view.cover > video {
  width: 100%;
  height: 484rpx;
}

.launch_video_page_b .page_main > view.cover > view {
  margin-top: 63rpx;
  margin-bottom: 100rpx;
}

.launch_video_page_b .page_main > view.cover > view > progress {
  margin-top: 16rpx;
  margin-left: calc((100vw - 450rpx) / 2);
  width: 450rpx;
  height: 5px;
  border-radius: 2px;
  overflow: hidden;
}

.launch_video_page_b .page_main > .grant_auth {
  min-height: 10rpx;
  margin: 10rpx 0rpx 30rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.launch_video_page_b .page_main > .grant_auth .title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.launch_video_page_b .page_main > .grant_auth .title label {
  margin-left: 30rpx;
}

.launch_video_page_b .page_main > .grant_auth > .radio-group {
  padding: 0 5%;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.launch_video_page_b .page_main > .grant_auth > .radio-group radio {
  font-size: 28rpx;
}

.launch_video_page_b .page_main > .grant_auth > .radio-group radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
  background: unset;
}

.launch_video_page_b .page_main > .grant_auth > .radio-group radio .wx-radio-input.wx-radio-input-checked {
  background: #1cbeb6;
  border-color: #1cbeb6;
}

.launch_video_page_b .page_main > .grant_auth > .radio-group radio .wx-radio-input.wx-radio-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.launch_video_page_b .page_main > .speak_with_interest {
  padding: 10rpx 30rpx;
}

.launch_video_page_b .page_main > .speak_with_interest > textarea {
  width: 690rpx;
  height: 200rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #0e1c29;
  text-align: left;
}

.launch_video_page_b .page_bottom {
  height: 100rpx;
}

.launch_video_page_b .page_bottom > .uploading {
  background-color: #106763;
}

.launch_video_page_b .page_bottom > button {
  height: 100rpx;
  line-height: 100rpx;
  margin: 0rpx;
  border-radius: 0rpx;
}

/* ================================== 上传视频后 ================================== */

.launch_video_page_a {
  margin: 0;
  padding: 0;
  border: 0rpx;
  height: 100%;
}

.launch_video_page_a > .page_top {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.launch_video_page_a > .page_top > label {
  margin-left: 30rpx;
}

.launch_video_page_a > .page_top > button {
  width: 150rpx;
  height: 60rpx;
}

.launch_video_page_a .page_main {
  width: 100%;
  text-align: center;
}

.launch_video_page_a .page_main > view.cover {
  padding-bottom: 10rpx;
  width: 100%;
}

.launch_video_page_a .page_main > view.cover > video {
  width: 100%;
  height: 484rpx;
}

.launch_video_page_a > .page_bottom {
  width: 100%;
  height: 150rpx;
  margin: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.launch_video_page_a > .page_bottom > .button_group {
  /* padding-left: 30rpx;
  padding-right: 30rpx; 
  width: 690rpx;
  */
  width: 100%;
  text-align: center;
}

.launch_video_page_a > .page_bottom > .button_group > button {
  width: 350rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  padding: unset;
  border: unset;
  font-size: 34rpx;
}

.launch_video_page_a > .page_bottom > .button_group > .button_space_left {
  margin-left: 20rpx;
}

.launch_video_page_a > .page_bottom > .button_group > .button_space_right {
  margin-right: 20rpx;
  background-color: #0e1c29;
}

.row-center {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.disabled-button {
  cursor: not-allowed;
  border-color: #999;
  color: #999;
}

.launch_video_page_a .launch_history {
  width: 100%;
  height: calc(100% - 730rpx);
}

/* =============== 打断投屏弹窗开始 =============== */

.bottom-pop-window-container {
  width: 100%;
  height: 100%;
  text-align: left;
  border-radius: 10rpx;
}

.bottom-pop-window-container > .bottom-pop-window-top {
  padding: 50rpx 0rpx 20rpx 0rpx;
}

.bottom-pop-window-container > .bottom-pop-window-top > .title > label {
  font-weight: bold;
  padding-left: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-main {
  padding: 20rpx 40rpx;
  margin-bottom: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-main > .content {
  display: block;
  margin-bottom: 20rpx;
}

.bottom-pop-window-container > .bottom-pop-window-bottom {
  height: 120rpx;
}

.bottom-pop-window-container > .bottom-pop-window-bottom > button {
  width: 285rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  display: inline-block;
  margin: 0rpx 40rpx;
}

/* =============== 打断投屏弹窗结束 =============== */
